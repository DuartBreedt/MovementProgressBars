<idea-plugin>
    <id>com.duartbreedt.movementprogressbars</id>
    <name>Movement</name>
    <vendor email="duartbreedt@gmail.com" url="https://github.com/DuartBreedt">DuartBreedt</vendor>

    <description><![CDATA[
    <p>Adds LGBTQIA+ progress bars to your IDE!</p>
    <br/>
    <p>You can choose from:</p>
    <ul>
        <li>Agender</li>
        <li>Gay pride</li>
        <li>Transgender</li>
        <li>Agender</li>
        <li>Aromantic</li>
        <li>Asexual</li>
        <li>Bigender</li>
        <li>Bisexual</li>
        <li>Gay Men</li>
        <li>Gay Pride</li>
        <li>Genderfluid</li>
        <li>Genderqueer</li>
        <li>Lesbian</li>
        <li>Non-Binary</li>
        <li>Pansexual</li>
        <li>Polysexual</li>
        <li>Transgender</li>
        <li>Bear Brotherhood</li>
        <li>Leather</li>
        <li>Lipstick Lesbian</li>
    </ul>
    ]]></description>

    <change-notes><![CDATA[
            <ul>
                <li>Open-ended IDE version for wider availability</li>
            </ul>
        ]]></change-notes>

    <version>1.0.5</version>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
    </extensions>

    <actions>

        <group id="ViewMovementProgressBarsPlugin" text="Movement" description="Settings for Movement progress bars" popup="true" compact="true">
            <add-to-group group-id="ViewMenu" anchor="after" relative-to-action="ViewAppearanceGroup"/>
            <action class="com.duartbreedt.movementprogressbars.actions.SetFlagToAgenderAction" id="Movement.Actions.ChangeFlag.Agender" text="Agender"
                    icon="/agender.svg"/>
            <action class="com.duartbreedt.movementprogressbars.actions.SetFlagToAromanticAction" id="Movement.Actions.ChangeFlag.Aromantic"
                    text="Aromantic"
                    icon="/aromantic.svg"/>
            <action class="com.duartbreedt.movementprogressbars.actions.SetFlagToAsexualAction" id="Movement.Actions.ChangeFlag.Asexual" text="Asexual"
                    icon="/asexual.svg"/>
            <action class="com.duartbreedt.movementprogressbars.actions.SetFlagToBigenderAction" id="Movement.Actions.ChangeFlag.Bigender" text="Bigender"
                    icon="/bigender.svg"/>
            <action class="com.duartbreedt.movementprogressbars.actions.SetFlagToBisexualAction" id="Movement.Actions.ChangeFlag.Bisexual" text="Bisexual"
                    icon="/bisexual.svg"/>
            <action class="com.duartbreedt.movementprogressbars.actions.SetFlagToGayMenAction" id="Movement.Actions.ChangeFlag.GayMen" text="Gay Men"
                    icon="/gay_men.svg"/>
            <action class="com.duartbreedt.movementprogressbars.actions.SetFlagToGayPrideAction" id="Movement.Actions.ChangeFlag.GayPride" text="Gay Pride"
                    icon="/gay_pride.svg"/>
            <action class="com.duartbreedt.movementprogressbars.actions.SetFlagToGenderfluidAction" id="Movement.Actions.ChangeFlag.Genderfluid"
                    text="Genderfluid"
                    icon="/genderfluid.svg"/>
            <action class="com.duartbreedt.movementprogressbars.actions.SetFlagToGenderqueerAction" id="Movement.Actions.ChangeFlag.Genderqueer"
                    text="Genderqueer"
                    icon="/genderqueer.svg"/>
            <action class="com.duartbreedt.movementprogressbars.actions.SetFlagToLesbianAction" id="Movement.Actions.ChangeFlag.Lesbian" text="Lesbian"
                    icon="/lesbian.svg"/>
            <action class="com.duartbreedt.movementprogressbars.actions.SetFlagToNonBinaryAction" id="Movement.Actions.ChangeFlag.NonBinary" text="Non-Binary"
                    icon="/nonbinary.svg"/>
            <action class="com.duartbreedt.movementprogressbars.actions.SetFlagToPansexualAction" id="Movement.Actions.ChangeFlag.Pansexual" text="Pansexual"
                    icon="/pansexual.svg"/>
            <action class="com.duartbreedt.movementprogressbars.actions.SetFlagToPolysexualAction" id="Movement.Actions.ChangeFlag.Polysexual" text="Polysexual"
                    icon="/polysexual.svg"/>
            <action class="com.duartbreedt.movementprogressbars.actions.SetFlagToTransgenderAction" id="Movement.Actions.ChangeFlag.Transgender"
                    text="Transgender"
                    icon="/transgender.svg"/>
            <separator/>
            <action class="com.duartbreedt.movementprogressbars.actions.SetFlagToBearBrotherhoodAction" id="Movement.Actions.ChangeFlag.BearBrotherhood"
                    text="Bear Brotherhood" icon="/bear_brotherhood.svg"/>
            <action class="com.duartbreedt.movementprogressbars.actions.SetFlagToLeatherAction" id="Movement.Actions.ChangeFlag.Leather" text="Leather"
                    icon="/leather.svg"/>
            <action class="com.duartbreedt.movementprogressbars.actions.SetFlagToLipstickLesbianAction" id="Movement.Actions.ChangeFlag.LipstickLesbian"
                    text="Lipstick Lesbian" icon="/lipstick_lesbian.svg"/>
            <action class="com.duartbreedt.movementprogressbars.actions.SetFlagToShuffleAction" id="Movement.Actions.ChangeFlag.Random"
                    text="Shuffle" icon="/gay_pride.svg"/>

        </group>
    </actions>

    <application-components>
        <component>
            <implementation-class>
                com.duartbreedt.movementprogressbars.MovementApplicationComponent
            </implementation-class>
        </component>
    </application-components>
</idea-plugin>